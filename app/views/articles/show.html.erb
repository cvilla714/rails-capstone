<p id="notice"><%= notice %></p>


<p>
  <strong>Author:</strong>
  <%= @article.author.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p class="mx-2 ">
  <%= @article.body %>
</p>

<p>
  <strong>Image:</strong>
  <img src='<%= @article.image %>' />
</p>

<p>
  <strong>Likes:</strong>
  <%= @article.likes.count %>
</p>

<p>
  <strong>categories:</strong>
  <% @article.categories.each do |cat| %>
    <%= cat.name %>
    <% end %>
</p>

<%= link_to 'Edit', edit_article_path(@article),class:"btn btn-info" %> |
<%= link_to 'Back', articles_path,class:"btn btn-info" %>
